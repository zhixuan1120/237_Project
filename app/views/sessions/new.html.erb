<% title("Sign In") %>
<h1>Sign In</h1>

<div class="row">
	<div class="col-xs-6 col-xs-offset-3">
		<%= form_tag sessions_path do %>

			<%= text_field_tag :email, params[:email], placeholder: "Email", class: "form-control"%>

			<%= password_field_tag :password, params[:password], placeholder: "Password", class: "form-control" %>

			<%= submit_tag "Log in", class: "btn btn-primary" %>
		<% end %>
		<p><%= link_to "Forget Password?", new_password_reset_path, id: "reset_password_link" %></p>
	</div>
</div>