<li id="<%= micropost.id %>">
	<span class="content"><%= wrap(micropost.content) %></span>
	<em>
	<% tmp = micropost.count_votes %>
   	<%= tmp %> Vote
   	<% if current_user.can_vote_for?(micropost) %>
   	  | <%= link_to "Up", vote_micropost_path(micropost, value: 1, count: tmp), method: "post", remote: true %>
      | <%= link_to "Down", vote_micropost_path(micropost, value: -1, count: tmp), method: "post", remote: true %>
    <% elsif current_user.voted?(micropost) %>
      | <%= link_to "Cancel", delete_micropost_path(micropost, count: tmp), method: "delete", remote: true %>
    <% end %>
  	</em>
</li>